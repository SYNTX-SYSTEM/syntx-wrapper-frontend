                <span className="pulse">ğŸ“¦</span> WRAPPER
              </div>
              <CyberDropdown 
                label="Wrapper" 
                icon="â—" 
                options={wrapperOptions} 
                selected={selectedWrapper} 
                onSelect={handleWrapperChange} 
                color="#f59e0b"
                zIndex={300}
              />
            </GlassCard>

            {/* Format - Auto-detected from Wrapper */}
            <GlassCard style={{ padding: 16 }} glowColor="#10b981">
