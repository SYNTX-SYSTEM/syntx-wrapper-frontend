// FORMAT DETECTION FROM WRAPPER CONTENT
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

function extractFormatFromContent(content: string): { name: string; fields: string[] } | null {
  // Suche nach "// FORMAT INJECTION: FORMATNAME"
  const formatMatch = content.match(/\/\/ ğŸ“‹ FORMAT INJECTION: ([A-Z_]+)/);
  if (!formatMatch) return null;
  
  const formatName = formatMatch[1];
  
  // Extrahiere Felder (### FELDNAME:)
  const fieldMatches = content.matchAll(/### ([A-Z_]+):/g);
  const fields = Array.from(fieldMatches).map(m => m[1]);
  
  return { name: formatName, fields };
}

