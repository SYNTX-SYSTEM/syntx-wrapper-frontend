        </GlassCard>

        {/* Sidebar */}
        {!isMobile && (
          <div style={{ display: 'flex', flexDirection: 'column', gap: 14, overflowY: 'auto' }}>
            {/* Wrapper */}
            <GlassCard style={{ padding: 16, position: 'relative', zIndex: 500 }} glowColor="#f59e0b">
