                <span className="pulse">ğŸ“‹</span> FORMAT <span style={{ fontSize: 8, opacity: 0.5 }}>(auto)</span>
              </div>
              {(() => {
                const detected = extractFormatFromContent(wrapperContent);
                if (!detected) {
                  return (
                    <div style={{ 
                      padding: '12px 14px', borderRadius: 12,
                      border: '1px solid rgba(255,255,255,0.1)', 
                      background: 'rgba(255,255,255,0.03)',
