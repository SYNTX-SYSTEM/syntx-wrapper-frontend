    { value: '', label: 'Kein Format' },
    ...formats.map(f => ({ value: f.name, label: f.name.toUpperCase(), badge: `${f.fields_count} Felder` }))
  ];

  return (
    <div style={{ position: 'relative' }}>
      <style>{cyberStyles}</style>
      
      <div style={{ display: 'grid', gridTemplateColumns: isMobile ? '1fr' : '1fr 320px', gap: 20, height: 'calc(100vh - 200px)', minHeight: 600 }}>
