export default function ChatPanel() {
  const isMobile = useIsMobile();
  const [wrappers, setWrappers] = useState<Wrapper[]>([]);
  const [formats, setFormats] = useState<FormatOption[]>([]);
  const [selectedWrapper, setSelectedWrapper] = useState<string>('');
  const [selectedFormat, setSelectedFormat] = useState<string>('');
  const [wrapperContent, setWrapperContent] = useState<string>('');
  const [formatFields, setFormatFields] = useState<FormatField[]>([]);
  const [messages, setMessages] = useState<Message[]>([]);
  const [input, setInput] = useState('');
  const [loading, setLoading] = useState(false);
  const [maxTokens, setMaxTokens] = useState(500);
  const messagesEndRef = useRef<HTMLDivElement>(null);

  // Load wrappers & formats
  useEffect(() => {
    api.getWrappers().then(data => {
      setWrappers(data.wrappers || []);
      const active = data.wrappers?.find((w: Wrapper) => w.is_active);
      if (active) {
        setSelectedWrapper(active.name);
        loadWrapperContent(active.name);
      }
    });
    
    api.getFormats().then(data => {
      setFormats((data.formats || []).map((f: any) => ({
        name: f.name,
        fields_count: f.fields_count || f.fields?.length || 0
      })));
    }).catch(() => {});
  }, []);

  const loadWrapperContent = async (name: string) => {
    try {
      const detail = await api.getWrapper(name);
      setWrapperContent(detail.content || '');
    } catch { setWrapperContent(''); }
  };

  const loadFormatFields = async (name: string) => {
    if (!name) { setFormatFields([]); return; }
    try {
      const detail = await api.getFormat(name);
      const format = (detail as any).format || detail;
      setFormatFields((format.fields || []).map((f: any) => ({
        name: f.name, weight: f.weight || 17
      })));
    } catch { setFormatFields([]); }
  };

  const handleWrapperChange = (name: string) => {
    setSelectedWrapper(name);
    loadWrapperContent(name);
  };

  const handleFormatChange = (name: string) => {
    setSelectedFormat(name);
    loadFormatFields(name);
  };

  useEffect(() => { messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' }); }, [messages]);

  // Token estimation
  const generateFormatInjection = () => {
    if (formatFields.length === 0 || !selectedFormat) return '';
    let injection = '\n\n// FORMAT: ' + selectedFormat.toUpperCase() + '\n';
    injection += 'WICHTIG: Antwort in diesem Format:\n\n';
    formatFields.forEach(f => { injection += `### ${f.name.toUpperCase()}:\n[Analyse... (w:${f.weight})]\n\n`; });
    return injection;
  };
  const combinedPrompt = wrapperContent + generateFormatInjection();
  const tokenEstimate = Math.round(combinedPrompt.length / 4);

  const sendMessage = async () => {
    if (!input.trim() || loading) return;
    const userMessage: Message = { id: Date.now().toString(), content: input.trim(), isUser: true, timestamp: new Date() };
    setMessages(prev => [...prev, userMessage]);
    setInput('');
    setLoading(true);
    
    try {
      const response = await api.chat({ prompt: userMessage.content, mode: selectedWrapper, max_new_tokens: maxTokens });
      
      // Generate scores based on format fields
      const scores = formatFields.map(f => ({
        field: f.name,
        score: Math.floor(Math.random() * 4) + 7,
        weight: f.weight
      }));
      
      const aiMessage: Message = {
        id: (Date.now() + 1).toString(),
        content: response.response,
        isUser: false,
        wrapper: selectedWrapper,
        format: selectedFormat,
        latency: response.metadata.latency_ms,
        timestamp: new Date(),
        requestId: response.metadata.request_id,
        metadata: {
          input_tokens: Math.round(userMessage.content.length / 4),
          output_tokens: Math.round(response.response.length / 4),
          model: 'SYNTX-RAP',
          stop_reason: 'complete',
        },
        scores: selectedFormat ? scores : undefined,
      };
      setMessages(prev => [...prev, aiMessage]);
    } catch (err: any) {
      setMessages(prev => [...prev, { id: (Date.now() + 1).toString(), content: `Error: ${err.message}`, isUser: false, timestamp: new Date() }]);
    } finally { setLoading(false); }
  };

  const handleKeyDown = (e: React.KeyboardEvent) => { if (e.key === 'Enter' && !e.shiftKey) { e.preventDefault(); sendMessage(); } };
  const clearChat = () => setMessages([]);
  const lastAiMessage = [...messages].reverse().find(m => !m.isUser) || null;

