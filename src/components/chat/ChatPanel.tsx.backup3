          {/* Header */}
          <div style={{ 
            padding: '16px 20px', 
            borderBottom: '1px solid rgba(255,255,255,0.05)', 
            display: 'flex', alignItems: 'center', justifyContent: 'space-between', 
            background: 'linear-gradient(90deg, rgba(217,70,239,0.1), transparent)'
          }}>
            <div style={{ display: 'flex', alignItems: 'center', gap: 14 }}>
              <span className="pulse" style={{ fontSize: 28 }}>ğŸ’¬</span>
              <div>
                <h2 className="glow-text" style={{ margin: 0, fontFamily: 'monospace', fontSize: 16, color: '#00d4ff', letterSpacing: 2 }}>SYNTX CHAT</h2>
                <div style={{ fontSize: 11, color: 'rgba(255,255,255,0.4)', marginTop: 2 }}>{messages.length} Nachrichten</div>
              </div>
            </div>
            <button onClick={clearChat} className="cyber-btn" style={{ 
              background: 'linear-gradient(135deg, rgba(239,68,68,0.2), rgba(239,68,68,0.05))', 
              border: '1px solid rgba(239,68,68,0.4)', borderRadius: 10, 
              padding: '10px 16px', color: '#ef4444', cursor: 'pointer', 
              fontFamily: 'monospace', fontSize: 11,
              boxShadow: '0 0 15px rgba(239,68,68,0.2)'
            }}>ğŸ—‘ï¸ Clear</button>
          </div>

          {/* Messages */}
          <div className="data-stream" style={{ flex: 1, overflowY: 'auto', padding: 20, display: 'flex', flexDirection: 'column' }}>
            {messages.length === 0 ? (
              <div style={{ flex: 1, display: 'flex', flexDirection: 'column', alignItems: 'center', justifyContent: 'center', color: 'rgba(255,255,255,0.3)', textAlign: 'center' }}>
                <div className="float" style={{ fontSize: 72, marginBottom: 20, opacity: 0.6 }}>ğŸŒŠ</div>
                <div className="glow-text" style={{ fontFamily: 'monospace', fontSize: 16, marginBottom: 10, color: '#00d4ff' }}>SYNTX FIELD RESONANCE</div>
                <div style={{ fontSize: 12, maxWidth: 300, lineHeight: 1.6 }}>WÃ¤hle einen Wrapper und starte die Konversation</div>
              </div>
            ) : (
              <>
                {messages.map(msg => (
                  <MessageBubble key={msg.id} message={msg.content} isUser={msg.isUser} wrapper={msg.wrapper} format={msg.format} latency={msg.latency} timestamp={msg.timestamp} scores={msg.scores} metadata={msg.metadata} isMobile={isMobile} />
