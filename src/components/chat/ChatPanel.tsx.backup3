                      background: 'linear-gradient(135deg, rgba(16,185,129,0.2), rgba(16,185,129,0.05))',
                      color: '#10b981', fontFamily: 'monospace', fontSize: 12,
                      display: 'flex', alignItems: 'center', gap: 8,
